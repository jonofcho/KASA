<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="container">
      <header>
        <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
      <nav>
         <div class="nav-wrapper">
           <a href="#" class="brand-logo">Hello! <%=@user.first_name%></a>
           <ul id="slide-out" class="side-nav">
               <li><div class="userView">
                 <img class="background" src="/assets/dog1.jpg">
                 <a href="/users/<%=@user.id%>"><img class="circle" src="<%= @user.avatar %>"></a>
                 <a href="#!name"><span class="white-text name"><%=@user.first_name%></span></a>
                 <a href="#!email"><span class="white-text email"><%=@user.email%></span></a>
               </div></li>
               <li><a href="/users/edit">Edit Profile</a></li>
               <%if @kasa%><<li><a href="/organizations/<%= @kasa.id%>"><%if @kasa%><%= @kasa.name%><%end%></a></li><%end%>
               <li><div class="divider"></div></li>
            <%if @chongdae%><li><a id="orgs" href="/organizations/<%=@chongdae.id%>">Chongdae</a></li><%end%>
               <li><a class="waves-effect" href="#!">Third Link With Waves</a></li>
             </ul>
         </div>
       </nav>
     </header>
      <%= form_for @organization, url: organizations_path, html: { multipart: true } do |form| %>

        <div class="field">
          <%= form.label :name %>:
          <%= form.text_field :name %><br />
        </div>
        <div class="field">
          <%= form.label :school_origin%>
          <%= form.text_field :school_origin%>
        </div>
        <div class="field">
          <%= form.label :description%>
          <%= form.text_field :description%>
        </div>
        <div class="field">
          <label>Background Image 1:</label>
          <%= form.file_field :avatar %>
        </div>
        <div class="field">
          <label>Background Image 2:</label>
          <%= form.file_field :avatar2 %>
        </div>
        <div class="field">
          <label>Organization Thumbnail/School Logo:</label>
          <%= form.file_field :avatar3 %>
        </div>
        <%= form.submit "Go"%>
      <% end %>

    </div>
  </body>
</html>
